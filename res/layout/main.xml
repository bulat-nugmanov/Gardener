<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              tools:context=".MainActivity">
    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_main_connect" android:text="@string/button_main_connect" android:layout_weight="1"
            android:onClick="gotoConnectActivity" android:nestedScrollingEnabled="false"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/button_main_browse"
            android:id="@+id/button_main_browse" android:layout_weight="1"
            android:onClick="gotoBrowseActivity"/>
</LinearLayout>

